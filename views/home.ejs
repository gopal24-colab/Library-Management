<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="fa-fa-logo.png" type="image/x-icon" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
      .container {
        min-width: 100%;
        display: flex;
        flex-direction: row;
        gap: 20px;
      }
      .card {
        width: 300px;
        height: 400px;
        padding: 10px;
        background: #f4faff;
        border-radius: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        color: white;
        transition: 0.2s ease-in-out;
        color: #000;
      }

      .img {
        width: 300px;
        height: 200px;
        aspect-ratio: 3/2;
        object-fit: contain;
        position: absolute;
        transition: 0.2s ease-in-out;
        z-index: 1;
      }
      .card {
        width: 190px;
        height: 274px;
        background: white;
        padding: 0.4em;
        border-radius: 6px;
      }

      .card-image {
        background-color: rgb(236, 236, 236);
        width: 100%;
        height: 60%;
        border-radius: 6px 6px 0 0;
      }

      .card-image:hover {
        transform: scale(0.98);
      }

      .category {
        text-transform: uppercase;
        font-size: 0.7em;
        font-weight: 600;
        color: rgb(63, 121, 230);
        padding: 10px 7px 0;
      }

      .category:hover {
        cursor: pointer;
      }

      .heading {
        font-weight: 600;
        color: rgb(88, 87, 87);
        padding: 7px;
      }

      .heading:hover {
        cursor: pointer;
      }

      .author {
        color: gray;
        font-weight: 400;
        font-size: 11px;
        padding-top: 20px;
      }

      .name {
        font-weight: 600;
      }

      .name:hover {
        cursor: pointer;
      }
    </style>
    <title>Home</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <img src="logo.png" alt="logo" width="70px" height="70px" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/profile">Profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                role="button"
                data-bs-toggle="dropdown"
                >Profile</a
              >
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/card">Card</a></li>
                <li><a class="dropdown-item" href="/logout">Logout</a></li>
                <li>
                  <a class="dropdown-item" href="/cardLogin"
                    >Login Using Card</a
                  >
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container-fluid mt-3">
      <h2>Books in Library</h2>
      <p>Here is a list of books in the library</p>

      <div class="row d-flex justify-content-evenly gap-4">
        <%bookList.forEach((book)=>{%>
        <div class="card">
          <div class="card-image">
            <img class="img" src="<%=book.image%>" alt="<%=book.title%>" />
          </div>
          <div class="category"></div>
          <div class="heading">
            <%=book?.title%>
            <div class="author">
              By <span class="name"><%=book?.author%></span>
            </div>
            <p><%=book?.description%></p>
          </div>
          <% if(book?.isBorrowed){ %>
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-toggle="popover"
            data-bs-placement="right"
            data-bs-custom-class="custom-popover"
            data-bs-title="Error!"
            data-bs-content="This book can't be borrowed because it is no loan.">
            On Loan
          </button>
          <% } else{%>
          <form action="/books/<%= book?._id%>" method="post">
            <button type="submit" class="btn btn-primary">borrow</button>
          </form>
          <% } %>
        </div>
        <%})%>
      </div>
    </div>
    <script>
      const popoverTriggerList = document.querySelectorAll(
        '[data-bs-toggle="popover"]'
      );
      const popoverList = [...popoverTriggerList].map(
        (popoverTriggerEl) => new bootstrap.Popover(popoverTriggerEl)
      );
    </script>
  </body>
</html>
